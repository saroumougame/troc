{% extends 'base.html.twig' %}



{% block content %}

 <section class="content">
  <div class="block-header">
   <div class="row">
    <div class="col-lg-7 col-md-6 col-sm-12">
     <h2> Ajouter un nouvel objet
      <small>Remplir les champs afin d'ajouter le nouvel objet dans votre inventaire</small>
     </h2>
    </div>
    <div class="col-lg-5 col-md-6 col-sm-12">
     <ul class="breadcrumb float-md-right">
      <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="zmdi zmdi-home"></i> Accueil</a></li>
      <li class="breadcrumb-item"><a href="{{ path('show_object') }}">Mes objets</a></li>
      <li class="breadcrumb-item active">Ajouter objet</li>
     </ul>
    </div>
   </div>
  </div>


  <div class="container-fluid">
   <div class="row clearfix">
    <!-- Basic Examples -->
    <div class="col-lg-12 col-md-12">
     <div class="card">
      <div class="header">
       <h2><strong>Formulaire d'ajout</strong> </h2>
      </div>
      <div class="body">
       <ul class="list-group">
           {{ form_start(form) }}
           {{ form_errors(form) }}

        <div class="row clearfix">
         <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
          <label >Nom de l'objet</label>
         </div>
         <div class="col-lg-10 col-md-10 col-sm-8">
          <div class="form-group">
              {{ form_row(form.nom, { 'attr': {'class': 'form-control no-resize'} })}}
          </div>
         </div>
        </div>


        <div class="row clearfix">
         <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
          <label >Description de l'objet</label>
         </div>
         <div class="col-lg-10 col-md-10 col-sm-8">
          <div class="form-group">
              {{ form_row(form.description, { 'attr': {'class': 'ckeditor w-100'} }) }}
          </div>
         </div>
        </div>

        <div class="row clearfix">
         <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
          <label >Photo de l'objet</label>
         </div>
         <div class="col-lg-10 col-md-10 col-sm-8">
          <div class="form-group">
              {{ form_row(form.photo) }}
          </div>
         </div>
        </div>

        <div class="row clearfix">
         <div class="col-sm-8 offset-sm-2">
             {{ form_row(form.submit, { 'attr': {'class': 'btn btn-raised btn-primary btn-round waves-effect'} }) }}
         </div>
        </div>

           {{ form_end(form) }}


       </ul>
      </div>
     </div>
    </div>
   </div>
   <!-- #END# Custom Content -->
  </div>
  </div>
 </section>


{% endblock %}