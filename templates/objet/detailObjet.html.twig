                                        {% endif %}





                                    </div>
                                </div>
                                <div class="details col-lg-8 col-md-12">
                                    <h3 class="product-title m-b-0">{{ objet.nom }}</h3>
                                    <hr>



                                    <p class="product-description">{{ objet.description|nl2br }}</p>

                                    {#{{ form(formDemandeTroc) }}#}

                                    {% if objet.user.id != app.user.id %}


                                    {{ form_start(formDemandeTroc) }}

                                    <div class="col-sm-6">
